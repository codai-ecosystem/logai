{
  "name": "@codai/logai",
  "version": "1.0.0",
  "description": "Enterprise Identity & Authentication Hub for the Codai Ecosystem",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev -p 4002",
    "build": "next build",
    "start": "next start -p 3002",
    "lint": "next lint",
    "test": "jest --passWithNoTests",
    "test:ui": "npx vitest ui",
    "test:e2e": "playwright test",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "db:migrate": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx scripts/seed.ts",
    "security:audit": "npm audit && pnpm dlx audit-ci --config audit-ci.json",
    "docker:build": "docker build -t logai .",
    "docker:run": "docker run -p 3002:3002 logai",
    "health": "curl -f http://localhost:3002/api/health || exit 1",
    "test:run": "vitest run",
    "test:watch": "jest --watch --passWithNoTests"
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "next-auth": "^4.24.5",
